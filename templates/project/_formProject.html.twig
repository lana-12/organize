{% extends 'base.html.twig' %}


{% block title %}
 {% if editMode %}
            Modifiez votre Projet 
        {% else %}
            Nouveau Projet
        {% endif %}
   | {{ parent() }}
{% endblock %}


{% block body %}

    <section>
    
        {% if editMode %}
            <h2 class="mt-4 center blue fs-1"> Modifier</h2>
        {% else %}
            <h2 class="mt-4 center blue fs-1"> Nouveau</h2>
        {% endif %}

    </section>

    <section class="bg-secondary text-white p-3 m-3">
    {# {{ dump(app.user) }} #}
    <h3 class="text-center">Administrateur : </h3>
        <p>{{ app.user.firstname }}</p>
        <p>{{ app.user.lastname }}</p>
        <p>{{ app.user.email }}</p>
    </section>

        {# <div class="d-flex ">
            {{ form_row(projectForm.name) }}
        </div>

        <div>
            {{ form_row(projectForm.description) }}
        </div> #}
    
    <main class="container mt-3">
		<div class="row">
			<div class="col ">
			

        {{ form_errors(projectForm) }}
        {{ form_start(projectForm,  { 'attr': {'class': 'formProfil'} }) }}

			<fieldset class="mb-3">
				<div>
                    {{ form_rest(projectForm) }}
                </div>

			</fieldset>
				<div class="d-flex justify-content-center">
				{% if editMode %}
					<button type="submit" class="btn btn-warning my-3 ">Modifier</button>
				{% else %}
					<button type="submit" class="btn btn-info my-3 mx-auto">Enregistrer</button>
				{% endif %}
				</div>

        {{ form_end(projectForm) }}
			</div>
		</div>
	</main>


{% endblock %}
