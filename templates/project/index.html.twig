{% extends 'base.html.twig' %}


{% block title %} OrgalizeLife | Projets {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="example-wrapper">

    {% for project in projects %}

{{ dump(project.slug) }}



        <h2>{{ project.name }}</h2>
        <a href="{{ path('project.show', {id: project.id , slug: project.slug }) }}">{{ project.name }}</a>
        <p> {{ project.description }}</p>
        
        <a class="btn btn-danger" href="{{ path('project.delete', {id: project.id }) }}">Supprimer</a>

        {{ dump(project) }}

    {% endfor %}

    </div>

{% endblock %}
