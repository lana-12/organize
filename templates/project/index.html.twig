{% extends 'base.html.twig' %}


{% block title %} OrgalizeLife | Projets {% endblock %}

{% block body %}
    <div class="example-wrapper">

    {% if projects  %}
        
        {% for project in projects %}
            <h2>{{ project.name }}</h2>
            <a href="{{ path('project.show', {id: project.id , slug: project.slug }) }}">{{ project.name }}</a>
            <p> {{ project.description }}</p>
            
            <a class="btn btn-danger" href="{{ path('project.delete', {id: project.id }) }}">Supprimer</a>

            {{ dump(project) }}
        {% endfor %}

    {% else %}
        <div class="alert alert-danger alert-dismissible" role="alert ">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

                <div class="alert-message">
                    <p>Pas de project en cours ...</p>
                    <a href="{{ path('project.show', {id: project.id , slug: project.slug }) }}">{{ project.name }}</a>
                    
                    </a>
                </div>
            </div>

    {% endif %}



    </div>

{% endblock %}
